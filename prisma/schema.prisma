generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Dossier {
  id           Int         @id @default(autoincrement())
  type         TypeDossier @default(CCharges)
  sujet        String      @db.LongText
  numeroDossier     String?
  dateLettre    DateTime
  dateLimite    DateTime
  dateLimiteOffres       DateTime? // Date maintien des offres (spécifique aux dépouillements)
  matPresident String
  nomPrenomPresident String
  numDami String?
  importance Importance @default(Normal)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  Chronologies Chronologie[]
}

enum Importance {
Normal
Important
TresImportant
Vital
}


enum TypeDossier {
  CCharges
  Depouillement
}

model Chronologie {
  id          Int       @id @default(autoincrement())
  dossier     Dossier   @relation(fields: [idDossier], references: [id])
  idDossier   Int
  instance    Instance  @relation(fields: [idInstance], references: [id])
  idInstance  Int
  dateEnvoi   DateTime?
  traite  Boolean @default(false)
  commentaire String
  dateLimite DateTime
}

model Instance {
  id               Int                @id @default(autoincrement())
  libelle          String
  rang             Int
  delai Int
  Chronologies Chronologie[]
  membres            Membre[]
}

model Profil { //à remplacer par general.agent
  id        Int      @id @default(autoincrement())
  matricule String 

  membres     Membre[]
}

model Membre {
  id         Int      @id @default(autoincrement())
  profil     Profil   @relation(fields: [idProfil], references: [id])
  idProfil   Int
  instance   Instance @relation(fields: [idInstance], references: [id])
  idInstance Int
}
